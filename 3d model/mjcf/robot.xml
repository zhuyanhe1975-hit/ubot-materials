<!-- robot.xml -->
<mujoco model="modular_robot">
  <default>
    <geom type="mesh" contype="1" conaffinity="1" condim="3" margin="0.0001" solref=".02 1" solimp=".9 .95 .001 0.5 1"></geom>
  </default>
  <compiler inertiafromgeom="auto" angle="degree" balanceinertia="true" boundmass="0.001"  boundinertia="0.001"></compiler>
  <asset>
    <mesh name="ma" file="./ma.obj" />
    <mesh name="mb" file="./mb.obj" />
    <mesh name="ax" file="./ax.obj" />
    <material name="ma" specular="1" shininess="1" rgba="0.5 0.0 0.0 1.0" />
    <material name="mb" specular="1" shininess="1" rgba="0.5 0.0 0.0 1.0" />
  </asset>
  <worldbody>
    <replicate count="1" offset="0 0 0.1">
      <body name="ma" >
        <freejoint name="FreeJoint"/>
        <geom name="ma_geom" mesh="ma" material="ma" contype="1" conaffinity="1" />
        <inertial pos="0 0 0" mass="0.2" />
        <site name="connector_0" pos="0.05 0 0 " size="0.01"/>
        <site name="connector_1" pos="0 0 -0.05" size="0.01"/>
        <body name="ax" pos="0.0 0.0 0.0">
            <joint name="pitch" axis="1 0 0" limited="true" range="-90 90" />
            <inertial pos="0 0 0" mass="0.1" />
            <geom name="ax_geom" mesh="ax" rgba="0.5 0.5 0.7 1" contype="2" conaffinity="2" />
            <body name="mb" pos="0.0 0.0 0.0">
                <inertial pos="0 0 0" mass="0.2" />
                <joint name="yaw" type="hinge" axis="0 0 1" limited="true" range="-90 90" />
                <geom name="mb_geom" mesh="mb" material="mb" contype="4" conaffinity="4" />
                <site name="connector_2" pos="-0.05 0 0.0" size="0.01"/>
                <site name="connector_3" pos="0.0 0.0 0.05" size="0.01"/> 
            </body>
        </body>
      </body>
    </replicate>
  </worldbody>
    
  <equality>
    <!-- Constraints will be added here -->
  </equality>
</mujoco>
